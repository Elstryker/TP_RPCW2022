extends layout

block content
    form(action='/create/file', method='post', enctype='multipart/form-data')
        label(for='form-title') Título
        input.file-title(type='text', name='title', placeholder='Título')
        br
        label(for='form-author') Autor
        input.file-author(type='text', name='author', placeholder='Autor')
        br
        label(for='form-file') Ficheiro
        input.file(type='file', name='file')
        br
        input(type="button", value='Adicionar mais um ficheiro', id='add-one-file')
        input(type="submit", value='Criar', id='submit-file')